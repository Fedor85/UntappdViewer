<UserControl x:Class="UntappdViewer.Views.Controls.DataTemplate.CheckinDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="200">
    <Border Margin="10" Width="200" Height="240">
        <StackPanel>
            <Border Width="200" Height="240" CornerRadius="5" Margin="5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1"/>
                </Border.Effect>
                <Border.Background>
                    <ImageBrush ImageSource="{Binding PhotoPath, Converter={StaticResource ImageReSizeWidthConverter}, ConverterParameter='250'}"/>
                </Border.Background>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
