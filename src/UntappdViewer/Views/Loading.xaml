<UserControl x:Class="UntappdViewer.Views.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UntappdViewer.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle>
            <Rectangle.Fill>
                <SolidColorBrush Color="#fd9532" Opacity="0.5"/>
            </Rectangle.Fill>
        </Rectangle>
        <fa:ImageAwesome Icon="CircleOutlineNotch" Spin="True" Height="48" Width="48">
            <fa:ImageAwesome.Foreground>#ffffff</fa:ImageAwesome.Foreground>
        </fa:ImageAwesome>
    </Grid>
</UserControl>
