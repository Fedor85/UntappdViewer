<UserControl x:Class="UntappdViewer.Views.Welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:properties="clr-namespace:UntappdViewer.Properties"
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="600" d:DesignWidth="800"  Background="{StaticResource MainColor}">
    <Grid Background="{StaticResource MainBackground}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="{x:Static properties:Resources.UntappdUserName}" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="15" Foreground="#ffffff"/>
            <TextBox Grid.Row="1" Height="20" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Grid>
        <ItemsControl Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Height="80" Width="300" Source="..\Resources\pbu_320_white.png"/>
            <Label Content="{x:Static properties:Resources.Signature}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Foreground="#ffffff"/>
        </ItemsControl>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="{x:Static properties:Resources.OpenFileCaption}" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="15" Foreground="#ffffff"/>
            <Button Name="OpenFileButton" Grid.Row="1" Height="20" Width="80" Content="{x:Static properties:Resources.OpenFile}"
                    HorizontalAlignment="Center" VerticalAlignment="Top" Background="#ffffff"/>
        </Grid>
    </Grid>
</UserControl>
