<UserControl x:Class="UntappdViewer.Views.Welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:properties="clr-namespace:UntappdViewer.Properties"
             xmlns:local="clr-namespace:UntappdViewer"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="600" d:DesignWidth="800"  Background="{StaticResource MainColor}"
             AllowDrop="True">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Drop">
            <prism:InvokeCommandAction Command="{Binding DropFileCommand}"/>
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid Background="{StaticResource MainBackground}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Height="50" Width="50" Source="..\Resources\default_avatar.png"/>
            <TextBlock >
                <Hyperlink NavigateUri="{Binding Source={x:Static local:DefaultValues.DeveloperProfileUrl}}"
                           TextDecorations="" RequestNavigate="HyperlinkOnRequestNavigate">
                    <TextBlock Text="{x:Static properties:Resources.DeveloperProfile}" Foreground="#ffffff"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
        <ItemsControl Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center">
                <Hyperlink NavigateUri="{Binding Source={x:Static local:DefaultValues.UntappdtUrl}}"
                           TextDecorations="" RequestNavigate="HyperlinkOnRequestNavigate">
                    <Image Height="80" Width="300" Source="..\Resources\pbu_320_white.png"/>
                </Hyperlink>
            </TextBlock>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="{x:Static properties:Resources.Signature1}" FontSize="15" Foreground="#ffffff"/>
                <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Hyperlink NavigateUri="{Binding EmailUrl}" TextDecorations="" RequestNavigate="HyperlinkOnRequestNavigate">
                        <TextBlock Text="{x:Static properties:Resources.Email}" FontSize="15" Foreground="#ffffff"/>
                    </Hyperlink>
                </TextBlock>
                <Label Grid.Column="2" Content="{x:Static properties:Resources.Signature2}" FontSize="15" Foreground="#ffffff"/>
            </Grid>
        </ItemsControl>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <ContentControl prism:RegionManager.RegionName="{x:Static local:RegionNames.RecentFilesRegion}"/>
                <Label Content="{x:Static properties:Resources.OpenFileCaption}" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                       FontSize="15" Foreground="#ffffff"/>
            </StackPanel>
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button Name="OpenFileButton" Height="20" Width="90" Content="{x:Static properties:Resources.OpenFile}" Command="{Binding OpenFileCommand}"
                        HorizontalAlignment="Center" VerticalAlignment="Top" Background="#ffffff"/>
                <Separator Height="10"/>
                <Button Name="CreateProjectButton" Height="20" Width="90" Content="{x:Static properties:Resources.CreateProject}" Command="{Binding CreateProjectCommand}"
                        HorizontalAlignment="Center" VerticalAlignment="Top" Background="#ffffff"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
