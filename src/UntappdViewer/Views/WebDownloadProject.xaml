<UserControl x:Class="UntappdViewer.Views.WebDownloadProject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UntappdViewer.Views"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:controls="clr-namespace:UntappdViewer.Views.Controls"
             xmlns:properties="clr-namespace:UntappdViewer.Properties"
             mc:Ignorable="d" 
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Background>
        <SolidColorBrush Opacity="0.2" Color="#ffffff"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Height="50" Width="50" Source="..\Resources\ut_connection_default.png" VerticalAlignment="Bottom"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="{x:Static properties:Resources.EnterAccessToken}" FontSize="15" Foreground="#ffffff" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <controls:PasswordBox Grid.Column="1" Height="20" Width="320" />
                <Button Grid.Column="2" Content="{x:Static properties:Resources.Check}"  Command="{Binding CheckAccessTokenCommand}"
                        Height="20" Width="90" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
