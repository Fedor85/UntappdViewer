<UserControl x:Class="UntappdViewer.Views.WebDownloadProject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UntappdViewer.Views"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:controls="clr-namespace:UntappdViewer.Views.Controls"
             xmlns:properties="clr-namespace:UntappdViewer.Properties"
             xmlns:behaviors="clr-namespace:UntappdViewer.Behaviors"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="600" d:DesignWidth="800">
    <b:Interaction.Behaviors>
        <behaviors:AccessTokenBehavior AccessToken="{Binding AccessToken, Mode=TwoWay}"/>
    </b:Interaction.Behaviors>
    <UserControl.Background>
        <SolidColorBrush Opacity="0.2" Color="#ffffff"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Height="50" Width="50" Source="..\Resources\ut_connection_default.png" VerticalAlignment="Bottom"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="{x:Static properties:Resources.EnterAccessToken}" FontSize="15" Foreground="#ffffff" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <controls:PasswordBox Grid.Column="1" x:Name="TokenTextBox" Height="20" Width="320"/>
                <Button Grid.Column="2" Name="AccessTokenButton"  Command="{Binding CheckAccessTokenCommand}" CommandParameter="{Binding ElementName=TokenTextBox, Path=Password}"
                        IsEnabled="False"  Height="20" Width="70" HorizontalAlignment="Left" Margin="5,0,0,0" >
                    <StackPanel Orientation="Horizontal">
                        <Image Name="CheckStatusImg" Height="15" Width="15" Visibility="Hidden" Source="..\Resources\red-x.png" Margin="0,0,2,0"/>
                        <TextBlock Text="{x:Static properties:Resources.Check}"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
        <Button  Grid.Row="2" Content="{x:Static properties:Resources.Ok}" Command="{Binding OkButtonCommand}" 
                 Width="60" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" IsDefault="True" Margin="0,0,5,0"/>
    </Grid>
</UserControl>
