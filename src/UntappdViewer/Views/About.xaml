<Window x:Class="UntappdViewer.Views.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mvvm="http://prismlibrary.com/"
        xmlns:properties="clr-namespace:UntappdViewer.Properties"
        xmlns:local="clr-namespace:UntappdViewer"
        xmlns:controls1="clr-namespace:UntappdViewer.UI.Controls;assembly=UntappdViewer.UI"
        mc:Ignorable="d"
        mvvm:ViewModelLocator.AutoWireViewModel="True"
        Title="{x:Static properties:Resources.AboutTitle}" Height="250" Width="500"  Background="{StaticResource MainGradient2}"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="{StaticResource MainBackground}">
        <controls1:LoopAutoScrollImageListBox Height="150" Speed="100" MinItemsCount="4" Opacity="0.6" ItemsSource="{Binding ImagePaths}"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Background="#000000" Opacity="0.2"/>
            <StackPanel>
                <TextBlock HorizontalAlignment="Center">
                        <Hyperlink NavigateUri="{Binding Source={x:Static local:DefaultValues.UntappdtUrl}}" TextDecorations="" RequestNavigate="HyperlinkOnRequestNavigate">
                            <Image Height="40" Width="200" Source="..\Resources\pbu_320_white.png"/>
                        </Hyperlink>
                </TextBlock>
                <Label Content="{Binding Version}" FontSize="15" Foreground="#ffffff" HorizontalAlignment="Center"/>
                <TextBlock HorizontalAlignment="Center">
                        <Hyperlink NavigateUri="{Binding EmailUrl}" TextDecorations="" RequestNavigate="HyperlinkOnRequestNavigate">
                            <TextBlock Text="{x:Static properties:Resources.Email}" FontSize="15" Foreground="#ffffff"/>
                        </Hyperlink>
                    </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>