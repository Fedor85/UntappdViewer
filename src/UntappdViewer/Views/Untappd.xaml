<UserControl x:Class="UntappdViewer.Views.Untappd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UntappdViewer.Views"
             xmlns:regions="http://prismlibrary.com/"
             xmlns:untappdViewer="clr-namespace:UntappdViewer"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Background>
        <SolidColorBrush Opacity="0.3" Color="#ffffff"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <ContentControl Grid.Row="0" regions:RegionManager.RegionName="{x:Static untappdViewer:RegionNames.MenuRegion}"/>
        <ContentControl Grid.Row="2" regions:RegionManager.RegionName="{x:Static untappdViewer:RegionNames.StatusBarRegion}"/>
    </Grid>
</UserControl>
