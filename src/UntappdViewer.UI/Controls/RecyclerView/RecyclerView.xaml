<ListBox x:Class="UntappdViewer.UI.Controls.RecyclerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dataTemplate="clr-namespace:UntappdViewer.UI.Controls.DataTemplates"
             xmlns:controls="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
             xmlns:vewModel="clr-namespace:UntappdViewer.UI.Controls.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
    <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
            <controls:VirtualizingWrapPanel HorizontalAlignment="Center"/>
        </ItemsPanelTemplate>
    </ItemsControl.ItemsPanel>
    <ListBox.Resources>
        <DataTemplate DataType="{x:Type vewModel:RatingViewModel}">
            <dataTemplate:RatingDataTemplate />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vewModel:ImageViewModel}">
            <dataTemplate:ImageDataTemplate />
        </DataTemplate>
    </ListBox.Resources>
</ListBox>